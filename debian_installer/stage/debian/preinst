#!/bin/sh
# preinst script for opencensusagent
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

USER="ocagent"
GROUP="ocagent"

case "$1" in
    install|upgrade)
        if ! getent passwd $USER >/dev/null ; then
            adduser --system --group --no-create-home $USER
        fi
        mkdir -p /opt/opencensus-agent/bin
        mkdir -p /opt/opencensus-agent/conf
        mkdir -p /var/run/opencensus-agent
        mkdir -p /var/log/opencensus-agent
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
